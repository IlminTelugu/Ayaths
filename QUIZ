import 'dart:math';
import 'package:flutter/material.dart';
import 'package:flutter_svg/flutter_svg.dart';
import 'package:shared_preferences/shared_preferences.dart';
import 'package:google_fonts/google_fonts.dart';

import 'donation_screen.dart';

// Calm Islamic UI palette (UPDATED TO MATCH REF IMAGE)
const Color kQuizBackground = Color(0xFFE5F9F6); // Main Page Start
const Color kQuizBackgroundEnd = Color(0xFFD0F0EB); // Main Page End
const Color kQuizAccent = Color(0xFF00ACAF); // Vibrant Teal (Ref Image)
const Color kQuizAccentLight = Color(0xFFE0F2F1); // Light Teal background for icons
const Color kQuizAppBarDark = Color(0xFF00796B); // Deep Teal (Ref Image)
const Color kQuizCard = Colors.white;
const Color kQuizText = Color(0xFF00796B); // Deep Teal for titles
const Color kQuizTextBody = Color(0xFF546E7A); // Greyish for body text
const Color kQuizTextMuted = Color(0xFF546E7A); // Map to body text
const Color kQuizMuted = Color(0xFFB0BEC5); // Light Grey for Locked status (Ref Image)

class QuizPalette {
  final Color background;
  final Color appBar;
  final Color card;
  final Color accent;
  final Color muted;
  final Color text;
  final Color textMuted;
  final List<BoxShadow> softShadows;

  const QuizPalette({
    required this.background,
    required this.appBar,
    required this.card,
    required this.accent,
    required this.muted,
    required this.text,
    required this.textMuted,
    required this.softShadows,
  });

  static QuizPalette of(BuildContext context) {
    final isDark = Theme.of(context).brightness == Brightness.dark;
    
    if (isDark) {
      return const QuizPalette(
        background: Color(0xFF0B1220), // Deep Dark Blue
        appBar: Colors.transparent,
        card: Color(0xFF1E293B), // Dark Slate
        accent: Color(0xFF26A69A), // Cyan/Teal Accent
        muted: Colors.white54,
        text: Colors.white,
        textMuted: Colors.white70,
        softShadows: [], // No shadows in dark mode for flatter look
      );
    }

    return const QuizPalette(
      background: kQuizBackground,
      appBar: Colors.transparent,
      card: Colors.white,
      accent: kQuizAccent,
      muted: kQuizMuted,
      text: kQuizText,
      textMuted: kQuizTextBody,
      softShadows: [
        BoxShadow(
          color: Color(0x0D000000),
          blurRadius: 10,
          offset: Offset(0, 4),
        ),
      ],
    );
  }
}

const List<BoxShadow> kSoftShadows = [
  BoxShadow(
    color: Color(0x1400897B),
    blurRadius: 16,
    offset: Offset(0, 10),
  ),
];

class QuizLevelScreen extends StatefulWidget {
  const QuizLevelScreen({super.key});

  @override
  State<QuizLevelScreen> createState() => _QuizLevelScreenState();
}

class _QuizLevelScreenState extends State<QuizLevelScreen> with SingleTickerProviderStateMixin {
  List<bool> _unlockedLevels = List.generate(15, (index) => index == 0); // 15 levels, first unlocked
  List<int> _levelStars = List.generate(15, (index) => 0); // Star ratings for each level
  
  late AnimationController _bobbingController;
  bool _shouldAnimateToProgress = false;

  String _userName = '';

  final List<String> _levelIcons = [
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852616/1n_upugkm.svg', // Level 1
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852629/2n_1_xsuoq8.svg', // Level 2
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852614/3n_bb4cqt.svg', // Level 3
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852602/4n_jlrjb1.svg', // Level 4
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852597/5n_eflsl3.svg', // Level 5
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852685/6n_xngkyz.svg', // Level 6
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852689/7n_noxeae.svg', // Level 7
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852673/8n_hfwvmq.svg', // Level 8
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852685/9n_as9jfu.svg', // Level 9
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852689/10n_ri4zl5.svg', // Level 10
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852710/11n_ispz5v.svg', // Level 11
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765853828/12n_f8qtau.svg', // Level 12
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852685/13n_xexe1r.svg', // Level 13
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852771/14n_x4wxsk.svg', // Level 14
    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852770/15n_azolhz.svg', // Level 15
  ];
  
  @override
  void initState() {
    super.initState();
    _loadUnlockedLevels();
    
    // Initialize bobbing animation
    _bobbingController = AnimationController(
      vsync: this,
      duration: const Duration(milliseconds: 600),
    )..repeat(reverse: true);
    
    // Trigger slow slide animation after a brief delay
    WidgetsBinding.instance.addPostFrameCallback((_) {
      Future.delayed(const Duration(milliseconds: 300), () {
        if (mounted) {
          setState(() {
            _shouldAnimateToProgress = true;
          });
        }
      });
    });
    
    // Don't load username here - will be loaded when needed
  }
  
  // Load unlocked levels from local storage
  Future<void> _loadUnlockedLevels() async {
    final prefs = await SharedPreferences.getInstance();
    setState(() {
      for (int i = 0; i < 15; i++) {
        _unlockedLevels[i] = prefs.getBool('level_$i') ?? (i == 0); // Level 1 is always unlocked
        _levelStars[i] = prefs.getInt('level_${i}_stars') ?? 0;
      }
    });
  }
  
  // Load user name from local storage
  Future<void> _loadUserName() async {
    final prefs = await SharedPreferences.getInstance();
    final name = prefs.getString('user_name');
    if (name == null || name.isEmpty) {
      // Show dialog to get user name - only when quiz is clicked
      _showUserNameDialog();
    } else {
      setState(() {
        _userName = name;
      });
    }
  }
  
  // Save user name to local storage
  Future<void> _saveUserName(String name) async {
    final prefs = await SharedPreferences.getInstance();
    await prefs.setString('user_name', name);
    setState(() {
      _userName = name;
    });
  }
  
  // Save unlocked levels to local storage
  Future<void> _saveUnlockedLevels() async {
    final prefs = await SharedPreferences.getInstance();
    for (int i = 0; i < 15; i++) {
      await prefs.setBool('level_$i', _unlockedLevels[i]);
      await prefs.setInt('level_${i}_stars', _levelStars[i]);
    }
  }
  
  // Save star rating for a level
  Future<void> _saveLevelStars(int levelIndex, int stars) async {
    setState(() {
      _levelStars[levelIndex] = stars;
    });
    await _saveUnlockedLevels();
  }
  
  @override
  void dispose() {
    _bobbingController.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    final p = QuizPalette.of(context); // Use the palette
    final isDark = Theme.of(context).brightness == Brightness.dark;

    return Scaffold(
      backgroundColor: p.background, // Use palette background
      appBar: AppBar(
        backgroundColor: Colors.transparent,
        elevation: 0,
        centerTitle: true,
        title: Column(
          children: [
            Text(
              'ISLAMIC QUIZ',
              style: GoogleFonts.outfit(
                fontSize: 20,
                fontWeight: FontWeight.w900,
                letterSpacing: 1.0,
                color: p.text, // Use palette text
              ),
            ),
            Text(
              'Sharpen your Iman',
              style: GoogleFonts.outfit(
                fontSize: 11,
                fontWeight: FontWeight.w600,
                color: p.textMuted, // Use palette muted text
                letterSpacing: 0.5,
              ),
            ),
          ],
        ),
        bottom: PreferredSize(
          preferredSize: const Size.fromHeight(40.0), // Height for the bicycle track
          child: Padding(
            padding: const EdgeInsets.symmetric(horizontal: 24.0, vertical: 8.0),
            child: LayoutBuilder(
              builder: (context, constraints) {
                // Calculate progress: (Unlocked Levels - 1) / (Total Levels - 1)
                // We subtract 1 because Level 1 is effectively "0 progress" visually at start
                final unlockedCount = _unlockedLevels.where((l) => l).length;
                final totalLevels = _unlockedLevels.length;
                final progress = (unlockedCount - 1) / (totalLevels - 1);
                
                // Ensure progress is within 0.0 to 1.0
                final safeProgress = progress.clamp(0.0, 1.0);
                
                  final trackWidth = constraints.maxWidth;
                // Subtract icon width to keep it inside bounds
                final maxTravel = trackWidth - 30; 
                
                // If animation hasn't started yet, position is 0. Otherwise, it's the actual progress.
                final targetPosition = _shouldAnimateToProgress ? (maxTravel * safeProgress) : 0.0;

                return SizedBox(
                  height: 30, 
                  child: Stack(
                    alignment: Alignment.centerLeft,
                    clipBehavior: Clip.none,
                    children: [
                      // 1. The Track Line
                      Container(
                        width: double.infinity,
                        height: 2,
                        decoration: BoxDecoration(
                          color: p.muted.withOpacity(0.3),
                          borderRadius: BorderRadius.circular(2),
                        ),
                      ),
                      
                      // 2. The Finish Line Flag
                      Positioned(
                        right: 0,
                        top: -8, // Adjust to center vertically relative to line
                        child: Icon(
                          Icons.flag_outlined,
                          color: isDark ? Colors.white : Colors.black45,
                          size: 28,
                        ),
                      ),
                      
                      // 3. The Moving Bicycle with Bobbing Animation
                      AnimatedPositioned(
                        duration: const Duration(seconds: 3), // Slow, premium movement
                        curve: Curves.easeOutQuart, // Smooth deceleration
                        left: targetPosition,
                        top: -10, // Base top position
                        onEnd: () {
                          // Stop bobbing when movement finishes
                          _bobbingController.stop();
                          // Reset to 0 offset to ensure it lands flat
                          _bobbingController.animateTo(0, duration: const Duration(milliseconds: 200));
                        },
                        child: AnimatedBuilder(
                          animation: _bobbingController,
                          builder: (context, child) {
                            return Transform.translate(
                              offset: Offset(0, _bobbingController.value * -2.0), // Bob up by 2 pixels
                              child: child,
                            );
                          },
                          child: Icon(
                            Icons.pedal_bike_rounded, 
                            color: isDark ? Colors.white : Colors.black45,
                            size: 28,
                          ),
                        ),
                      ),
                    ],
                  ),
                );
              },
            ),
          ),
        ),
        leading: IconButton(
          icon: Icon(Icons.arrow_back, color: p.accent, size: 28), // Use palette accent
          onPressed: () => Navigator.pop(context),
        ),
      ),
      body: Padding(
        padding: const EdgeInsets.symmetric(horizontal: 20.0, vertical: 10.0),
        child: ListView.builder(
          physics: const BouncingScrollPhysics(),
          itemCount: 15,
          itemBuilder: (context, index) {
            final levelNumber = index + 1;
            final isUnlocked = _unlockedLevels[index];
            final stars = _levelStars[index];

            return _buildQuabanStyleLevelRow(levelNumber, isUnlocked, stars);
          },
        ),
      ),
    );
  }

  Widget _buildQuabanStyleLevelRow(int levelNumber, bool isUnlocked, int stars) {
    final p = QuizPalette.of(context); // Use palette
    final isCompleted = stars > 0;
    final statusText = isUnlocked ? 'Unlocked' : 'Locked';

    return Padding(
      padding: const EdgeInsets.only(bottom: 20.0),
      child: GestureDetector(
        onTap: isUnlocked ? () => _startQuiz(levelNumber) : null,
        child: Container(
          padding: const EdgeInsets.all(20.0),
          decoration: BoxDecoration(
            color: p.card, // Use palette card color
            borderRadius: BorderRadius.circular(30),
            boxShadow: p.softShadows, // Use palette shadows
            border: Theme.of(context).brightness == Brightness.dark 
               ? Border.all(color: Colors.white.withOpacity(0.05)) 
               : null,
          ),
          child: Row(
            children: [
              // Level number circle (Left Side)
              Container(
                width: 60,
                height: 60,
                decoration: BoxDecoration(
                  shape: BoxShape.circle,
                  border: Border.all(
                    color: isUnlocked ? p.accent : p.muted.withOpacity(0.3),
                    width: 2.5,
                  ),
                ),
                child: Center(
                  child: Text(
                    '$levelNumber',
                    style: TextStyle(
                      fontSize: 26,
                      fontWeight: FontWeight.w800,
                      color: isUnlocked ? p.accent : p.muted,
                    ),
                  ),
                ),
              ),
              const SizedBox(width: 20),
              // Level info
              Expanded(
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    Text(
                      'Level $levelNumber',
                      style: TextStyle(
                        fontSize: 20,
                        fontWeight: FontWeight.w800,
                        color: isUnlocked ? p.text : p.textMuted,
                      ),
                    ),
                    const SizedBox(height: 4),
                    Text(
                      statusText,
                      style: TextStyle(
                        fontSize: 15,
                        fontWeight: FontWeight.w600,
                        color: p.muted,
                      ),
                    ),
                  ],
                ),
              ),
              // Right side: Lock, Icon (if completed), or Ready Button
              if (!isUnlocked)
                Icon(
                  Icons.lock_outline_rounded,
                  color: p.muted,
                  size: 32,
                )
              else if (isCompleted)
                // Show Level Icon after completion
                SvgPicture.network(
                  _levelIcons[levelNumber - 1],
                  width: 40,
                  height: 40,
                  placeholderBuilder: (BuildContext context) => Icon(
                    Icons.check_circle_outline,
                    color: p.accent,
                    size: 32,
                  ),
                )
              else
                // Unlocked but not completed: Show Ready Button
                Container(
                  padding: const EdgeInsets.symmetric(horizontal: 24, vertical: 10),
                  decoration: BoxDecoration(
                    color: p.accent,
                    borderRadius: BorderRadius.circular(30),
                  ),
                  child: const Text(
                    'Ready',
                    style: TextStyle(
                      color: Colors.white,
                      fontWeight: FontWeight.w800,
                      fontSize: 16,
                    ),
                  ),
                ),
            ],
          ),
        ),
      ),
    );
  }

  void _startQuiz(int levelNumber) async {
    // Load username before starting quiz
    if (_userName.isEmpty) {
      await _loadUserName();
      // Wait for dialog to complete if shown
      if (_userName.isEmpty) {
        return; // Don't start quiz if name dialog was cancelled
      }
    }
    
    if (mounted) {
      await Navigator.of(context).push(
        MaterialPageRoute(
          builder: (context) => QuizScreen(
            levelNumber: levelNumber,
            userName: _userName,
            onQuizCompleted: (score) async {
              await _handleQuizCompletion(levelNumber, score);
            },
          ),
        ),
      );
      
      // Reload unlocked levels when returning from quiz
      // This ensures the UI reflects any newly unlocked levels
      await _loadUnlockedLevels();
    }
  }

  Future<void> _handleQuizCompletion(int levelNumber, int score) async {
    // Calculate stars based on score (out of 10 questions)
    int earnedStars = 0;
    if (score >= 9) earnedStars = 5;
    else if (score >= 7) earnedStars = 4;
    else if (score >= 5) earnedStars = 3;
    else if (score >= 3) earnedStars = 2;
    else if (score >= 1) earnedStars = 1;
    
    // Save stars for current level
    await _saveLevelStars(levelNumber - 1, earnedStars);
    
    // Check if score meets requirement (9 out of 10) to unlock next level
    if (score >= 9 && levelNumber < 15) {
      setState(() {
        // Unlock the NEXT level
        _unlockedLevels[levelNumber] = true;
      });
      
      // Save to local storage
      await _saveUnlockedLevels();
    }
  }

  // Achievements display removed
  
  // Show dialog to get user name
  void _showUserNameDialog() {
    final TextEditingController nameController = TextEditingController();
    
    showDialog(
      context: context,
      barrierDismissible: false,
      builder: (BuildContext context) {
        return Dialog(
          shape: RoundedRectangleBorder(
            borderRadius: BorderRadius.circular(20),
          ),
          backgroundColor: kQuizCard,
          child: Container(
            padding: const EdgeInsets.all(25),
            decoration: BoxDecoration(
              borderRadius: BorderRadius.circular(20),
              border: Border.all(
                color: kQuizAccent.withOpacity(0.25),
                width: 1,
              ),
            ),
            child: Column(
              mainAxisSize: MainAxisSize.min,
              children: [
                const Icon(
                  Icons.person,
                  size: 50,
                  color: kQuizAccent,
                ),
                const SizedBox(height: 20),
                const Text(
                  'Apka Naam Kya Hai?',
                  style: TextStyle(
                    fontSize: 22,
                    fontWeight: FontWeight.w600,
                    color: kQuizAccent,
                  ),
                  textAlign: TextAlign.center,
                ),
                const SizedBox(height: 10),
                const Text(
                  'Quiz mein aapka swagat karne ke liye',
                  style: TextStyle(
                    fontSize: 14,
                    color: kQuizTextMuted,
                  ),
                  textAlign: TextAlign.center,
                ),
                const SizedBox(height: 20),
                TextField(
                  controller: nameController,
                  autofocus: true,
                  style: const TextStyle(color: kQuizText),
                  decoration: InputDecoration(
                    hintText: 'Apna naam likhen',
                    hintStyle: const TextStyle(color: kQuizTextMuted),
                    filled: true,
                    fillColor: Colors.white,
                    border: OutlineInputBorder(
                      borderRadius: BorderRadius.circular(12),
                      borderSide: BorderSide(
                        color: kQuizAccent.withOpacity(0.25),
                      ),
                    ),
                    enabledBorder: OutlineInputBorder(
                      borderRadius: BorderRadius.circular(12),
                      borderSide: BorderSide(
                        color: kQuizAccent.withOpacity(0.25),
                      ),
                    ),
                    focusedBorder: OutlineInputBorder(
                      borderRadius: BorderRadius.circular(12),
                      borderSide: const BorderSide(
                        color: kQuizAccent,
                        width: 2,
                      ),
                    ),
                  ),
                ),
                const SizedBox(height: 20),
                SizedBox(
                  width: double.infinity,
                  child: ElevatedButton(
                    onPressed: () {
                      if (nameController.text.trim().isNotEmpty) {
                        _saveUserName(nameController.text.trim());
                        Navigator.pop(context);
                      }
                    },
                    style: ElevatedButton.styleFrom(
                      backgroundColor: kQuizAccent,
                      foregroundColor: Colors.white,
                      padding: const EdgeInsets.symmetric(vertical: 15),
                      shape: RoundedRectangleBorder(
                        borderRadius: BorderRadius.circular(30),
                      ),
                      elevation: 0,
                    ),
                    child: const Text(
                      'Shuru Karein',
                      style: TextStyle(
                        fontSize: 16,
                        fontWeight: FontWeight.w700,
                      ),
                    ),
                  ),
                ),
              ],
            ),
          ),
        );
      },
    );
  }

  void _showDonationDialog() {
    Navigator.push(
      context,
      MaterialPageRoute(builder: (_) => const DonationScreen()),
    );
  }
}

class QuizScreen extends StatefulWidget {
  final int levelNumber;
  final String userName;
  final Future<void> Function(int) onQuizCompleted;

  const QuizScreen({
    super.key,
    required this.levelNumber,
    required this.userName,
    required this.onQuizCompleted,
  });

  @override
  State<QuizScreen> createState() => _QuizScreenState();
}

class _QuizScreenState extends State<QuizScreen> {
  int _currentQuestionIndex = 0;
  int _score = 0;
  int? _selectedAnswer;
  late List<Map<String, dynamic>> _questions;
  List<int?> _userAnswers = []; // Track user's answers for each question
  
  // All 150 Islamic quiz questions in Roman Urdu
  final List<Map<String, dynamic>> _allQuestions = [
    {'question': 'Islam ke bunyadi arkaan kitne hain?', 'options': ['3', '4', '5', '6'], 'correct': 2},
    {'question': 'Islam ka pehla rukun kya hai?', 'options': ['Namaz', 'Roza', 'Kalma', 'Zakat'], 'correct': 2},
    {'question': 'Kalma-e-Tayyaba ka matlab kya hai?', 'options': ['Namaz ka farz hona', 'Allah ek hai aur Muhammad ﷺ Rasool hain', 'Quran ka hukum', 'Jannat ka raasta'], 'correct': 1},
    {'question': 'Quran kis zaban mein nazil hua?', 'options': ['Urdu', 'Farsi', 'Arabic', 'Hebrew'], 'correct': 2},
    {'question': 'Quran-e-Pak mein total surah kitni hain?', 'options': ['112', '113', '114', '115'], 'correct': 2},
    {'question': 'Quran-e-Pak ki pehli Surah ka naam kya hai?', 'options': ['Al-Baqarah', 'Al-Fatihah', 'Al-Ikhlas', 'An-Nas'], 'correct': 1},
    {'question': 'Quran-e-Pak ki aakhri Surah ka naam kya hai?', 'options': ['Al-Falaq', 'Al-Kausar', 'An-Nas', 'Al-Asr'], 'correct': 2},
    {'question': 'Namaz din mein kitni farz hain?', 'options': ['3', '4', '5', '6'], 'correct': 2},
    {'question': 'Fajr namaz mein farz kitne hote hain?', 'options': ['4', '2', '3', '5'], 'correct': 1},
    {'question': 'Islam mein sab se pehla farz kya hua?', 'options': ['Roza', 'Zakat', 'Namaz', 'Kalma'], 'correct': 3},
    {'question': 'Roza kis mahine mein farz hai?', 'options': ['Muharram', 'Rajab', 'Ramzan', 'Shawwal'], 'correct': 2},
    {'question': 'Zakat kis par farz hoti hai?', 'options': ['Har insan par', 'Ghareeb par', 'Sahib-e-Nisab par', 'Bachon par'], 'correct': 2},
    {'question': 'Hajj kis shehar mein hota hai?', 'options': ['Madina', 'Makkah', 'Taif', 'Jerusalem'], 'correct': 1},
    {'question': 'Hajj kis mahine mein hota hai?', 'options': ['Ramzan', 'Zil Hijjah', 'Shawwal', 'Safar'], 'correct': 1},
    {'question': 'Islam ka pehla Qibla kya tha?', 'options': ['Masjid-e-Haram', 'Masjid-e-Nabawi', 'Masjid-e-Aqsa', 'Kaaba'], 'correct': 2},
    {'question': 'Nabi ﷺ ka naam kya tha?', 'options': ['Ahmad', 'Muhammad', 'Mustafa', 'Sab sahi'], 'correct': 3},
    {'question': 'Nabi ﷺ par pehli wahi kis ghaar mein nazil hui?', 'options': ['Ghaar-e-Saur', 'Ghaar-e-Hira', 'Ghaar-e-Thor', 'Ghaar-e-Noor'], 'correct': 1},
    {'question': 'Pehli wahi mein kaunsi ayat nazil hui?', 'options': ['Alhamdulillah', 'Qul huwallah', 'Iqra', 'Subhanallah'], 'correct': 2},
    {'question': 'Nabi ﷺ ke walid ka naam kya tha?', 'options': ['Abdullah', 'Abu Talib', 'Abdul Muttalib', 'Hamza'], 'correct': 0},
    {'question': 'Nabi ﷺ ki walida ka naam kya tha?', 'options': ['Aisha', 'Fatima', 'Amina', 'Halima'], 'correct': 2},
    {'question': 'Islam mein pehla mard jo iman laya?', 'options': ['Umar (RA)', 'Ali (RA)', 'Abu Bakr (RA)', 'Usman (RA)'], 'correct': 2},
    {'question': 'Islam mein pehli aurat jo iman laye?', 'options': ['Aisha (RA)', 'Fatima (RA)', 'Khadija (RA)', 'Hafsa (RA)'], 'correct': 2},
    {'question': 'Quran-e-Pak mein sajde wali ayatein kitni hain?', 'options': ['10', '12', '14', '15'], 'correct': 2},
    {'question': 'Shab-e-Qadr kis mahine mein hoti hai?', 'options': ['Rajab', 'Ramzan', 'Shawwal', 'Muharram'], 'correct': 1},
    {'question': 'Islam ka matlab kya hai?', 'options': ['Aman', 'Ibadat', 'Farz', 'Jihad'], 'correct': 0},
    {'question': 'Iman ke arkaan kitne hain?', 'options': ['4', '5', '6', '7'], 'correct': 2},
