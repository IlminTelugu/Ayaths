    'https://res.cloudinary.com/dxghbizrv/image/upload/v1765852770/15n_azolhz.svg',
  ];
  
  // Get personalized Roman Urdu appreciation message
  String _getAppreciationMessage(bool isExcellent) {
    final List<String> excellentMessages = [
      'Mashallah $userName! Aap bohot acha kar rahe hain!',
      'Zabardast $userName! Aapka ilm bohot acha hai!',
      'Bahut khub $userName! Allah aapko aur ilm de!',
      'Bohot ache $userName! Aap kamyab ho rahe hain!',
      'Shandar $userName! Aapki mehnat rang la rahi hai!',
    ];
    
    final List<String> encouragementMessages = [
      '$userName, koshish karte rahein! Aap zaroor kamyab honge!',
      '$userName, himmat rakhein! Aap behtar kar sakte hain!',
      '$userName, practice se sab mumkin hai!',
      '$userName, haar na manein! Agli baar zaroor!',
      '$userName, mehnat karte rahein! Kamyabi aapki hai!',
    ];
    
    final messages = isExcellent ? excellentMessages : encouragementMessages;
    final index = levelNumber % messages.length;
    return messages[index];
  }

  @override
  Widget build(BuildContext context) {
    final p = QuizPalette.of(context);
    final isDark = Theme.of(context).brightness == Brightness.dark;
    final isExcellent = score >= 9;
    
    return Scaffold(
      backgroundColor: Colors.transparent,
      appBar: AppBar(
        title: const Text(
          'Quiz Results',
          style: TextStyle(
            color: Colors.white,
            fontWeight: FontWeight.w800,
          ),
        ),
        backgroundColor: kQuizAccent,
        elevation: 0,
        centerTitle: true,
        automaticallyImplyLeading: false,
      ),
      body: Container(
        decoration: BoxDecoration(
          gradient: LinearGradient(
            begin: Alignment.topCenter,
            end: Alignment.bottomCenter,
            colors: [
              isDark ? const Color(0xFF0B1220) : kQuizBackground,
              isDark ? const Color(0xFF0F172A) : kQuizBackground,
            ],
          ),
        ),
        child: SafeArea(
          child: Column(
            children: [
              const SizedBox(height: 20),
              
              // 1. Top Icon (Full size, centered, no padding)
              Center(
                child: isExcellent
                    ? SizedBox(
                        width: 140,
                        height: 140,
                        child: SvgPicture.network(
                          _levelIcons[levelNumber - 1],
                          fit: BoxFit.contain,
                          placeholderBuilder: (BuildContext context) => const Icon(
                            Icons.star,
                            size: 80,
                            color: Colors.white,
                          ),
                        ),
                      )
                    : Icon(
                        Icons.refresh,
                        size: 90,
                        color: isDark ? Colors.white70 : Colors.black45,
                      ),
              ),
              
              const SizedBox(height: 10),

              // 2. Score
              Text(
                '$score / $totalQuestions',
                style: TextStyle(
                  fontSize: 36,
                  fontWeight: FontWeight.w800,
                  color: p.text,
                ),
              ),
              
              const SizedBox(height: 15),

              // 3. Answer Review Section (Takes available space)
              Expanded(
                child: Container(
                  margin: const EdgeInsets.symmetric(horizontal: 16),
                  padding: const EdgeInsets.symmetric(horizontal: 12, vertical: 12),
                  decoration: BoxDecoration(
                    color: p.card,
                    borderRadius: BorderRadius.circular(20),
                    border: Border.all(
                      color: p.accent.withOpacity(0.15),
                      width: 1,
                    ),
                    boxShadow: p.softShadows,
                  ),
                  child: Column(
                    crossAxisAlignment: CrossAxisAlignment.start,
                    children: [
                      Padding(
                        padding: const EdgeInsets.only(bottom: 10, left: 4),
                        child: Text(
                          'Jawabat Ka Jaiza',
                          style: TextStyle(
                            fontSize: 16,
                            fontWeight: FontWeight.w700,
                            color: p.text,
                          ),
                        ),
                      ),
                      Expanded(
                        child: ListView.builder(
                          physics: const BouncingScrollPhysics(),
                          itemCount: questions.length,
                          padding: EdgeInsets.zero,
                          itemBuilder: (context, index) {
                            final question = questions[index];
                            final userAnswer = userAnswers[index];
                            final correctAnswer = question['correct'] as int;
                            final isCorrect = userAnswer == correctAnswer;
                            final options = question['options'] as List<dynamic>;

                            return Container(
                              margin: const EdgeInsets.only(bottom: 10),
                              padding: const EdgeInsets.symmetric(horizontal: 12, vertical: 10),
                              decoration: BoxDecoration(
                                color: isDark 
                                    ? const Color(0xFF1A2332)
                                    : Colors.grey.shade50,
                                borderRadius: BorderRadius.circular(10),
                                border: Border.all(
                                  color: isCorrect 
                                      ? Colors.green.withOpacity(0.3)
                                      : Colors.red.withOpacity(0.3),
                                  width: 1,
                                ),
                              ),
                              child: Column(
                                crossAxisAlignment: CrossAxisAlignment.start,
                                children: [
                                  // Question number and status (Compact)
                                  Row(
                                    children: [
                                      Text(
                                        '${index + 1}. ',
                                        style: TextStyle(
                                          fontSize: 13,
                                          fontWeight: FontWeight.w700,
                                          color: p.textMuted,
                                        ),
                                      ),
                                      Expanded(
                                        child: Text(
                                          question['question'] as String,
                                          style: TextStyle(
                                            fontSize: 14,
                                            fontWeight: FontWeight.w600,
                                            color: p.text,
                                          ),
                                          maxLines: 2,
                                          overflow: TextOverflow.ellipsis,
                                        ),
                                      ),
                                      const SizedBox(width: 6),
                                      Icon(
                                        isCorrect ? Icons.check_circle : Icons.cancel,
                                        color: isCorrect ? Colors.green : Colors.red,
                                        size: 18,
                                      ),
                                    ],
                                  ),
                                  const SizedBox(height: 8),
                                  
                                  // User's answer
                                  if (userAnswer != null)
                                    Row(
                                      children: [
                                        Icon(
                                          isCorrect ? Icons.check : Icons.close,
                                          color: isCorrect ? Colors.green : Colors.red,
                                          size: 14,
                                        ),
                                        const SizedBox(width: 6),
                                        Expanded(
                                          child: Text(
                                            'Aap: ${options[userAnswer]}',
                                            style: TextStyle(
                                              fontSize: 13,
                                              color: isCorrect ? Colors.green.shade700 : Colors.red.shade700,
                                              fontWeight: FontWeight.w500,
                                            ),
                                          ),
                                        ),
                                      ],
                                    ),
                                  
                                  // Correct answer (only if wrong)
                                  if (!isCorrect) 
                                    Padding(
                                      padding: const EdgeInsets.only(top: 4),
                                      child: Row(
                                        children: [
                                          Icon(
                                            Icons.lightbulb_outline,
                                            color: Colors.green.shade700,
                                            size: 14,
                                          ),
                                          const SizedBox(width: 6),
                                          Expanded(
                                            child: Text(
                                              'Sahi: ${options[correctAnswer]}',
                                              style: TextStyle(
                                                fontSize: 13,
                                                color: Colors.green.shade700,
                                                fontWeight: FontWeight.w500,
                                              ),
                                            ),
                                          ),
                                        ],
                                      ),
                                    ),
                                ],
                              ),
                            );
                          },
                        ),
                      ),
                    ],
                  ),
                ),
              ),

              const SizedBox(height: 15),

              // 4. Appreciation & Buttons (Bottom Section)
              Container(
                width: double.infinity,
                padding: const EdgeInsets.fromLTRB(16, 0, 16, 16),
                child: Column(
                  children: [
                    // Appreciation Card (Compact)
                    Container(
                      width: double.infinity,
                      padding: const EdgeInsets.symmetric(horizontal: 16, vertical: 12),
                      decoration: BoxDecoration(
                        color: p.card,
                        borderRadius: BorderRadius.circular(14),
                        border: Border.all(
                          color: p.accent.withOpacity(0.15),
                        ),
                        boxShadow: [
                          BoxShadow(
                            color: p.accent.withOpacity(0.05),
                            blurRadius: 10,
                            offset: const Offset(0, 4),
                          ),
                        ],
                      ),
                      child: Column(
                        children: [
                          Text(
                            isExcellent ? '🎉 Mubarak Ho!' : '💪 Koshish Jari Rakhein!',
                            style: TextStyle(
                              fontSize: 16,
                              fontWeight: FontWeight.w800,
                              color: isExcellent ? p.accent : p.text,
                            ),
                          ),
                          const SizedBox(height: 4),
                          Text(
                            _getAppreciationMessage(isExcellent),
                            style: TextStyle(
                              fontSize: 13,
                              color: p.text,
                              height: 1.3,
                            ),
                            textAlign: TextAlign.center,
                          ),
                        ],
                      ),
                    ),
                    
                    const SizedBox(height: 12),

                    // Buttons
                    Row(
                      children: [
                        Expanded(
                          child: ElevatedButton(
                            onPressed: () {
                              Navigator.of(context).pop();
                            },
                            style: ElevatedButton.styleFrom(
                              backgroundColor: p.card,
                              foregroundColor: p.text,
                              elevation: 0,
                              shape: RoundedRectangleBorder(
                                borderRadius: BorderRadius.circular(25),
                                side: BorderSide(
                                  color: p.textMuted.withOpacity(0.25),
                                ),
                              ),
                              padding: const EdgeInsets.symmetric(vertical: 12),
                            ),
                            child: const Text(
                              'Levels',
                              style: TextStyle(fontWeight: FontWeight.w700),
                            ),
                          ),
                        ),
                        const SizedBox(width: 12),
                        Expanded(
                          child: ElevatedButton(
                            onPressed: () async {
                              await onQuizCompleted(score);
                              if (context.mounted) {
                                if (isExcellent && levelNumber < 15) {
                                  Navigator.of(context).pushReplacement(
                                    MaterialPageRoute(
                                      builder: (_) => QuizScreen(
                                        levelNumber: levelNumber + 1,
                                        userName: userName,
                                        onQuizCompleted: onQuizCompleted,
                                      ),
                                    ),
                                  );
                                } else {
                                  Navigator.of(context).pushReplacement(
                                    MaterialPageRoute(
                                      builder: (_) => QuizScreen(
                                        levelNumber: levelNumber,
                                        userName: userName,
                                        onQuizCompleted: onQuizCompleted,
                                      ),
                                    ),
                                  );
                                }
                              }
                            },
                            style: ElevatedButton.styleFrom(
                              backgroundColor: p.accent,
                              foregroundColor: Colors.white,
                              elevation: 0,
                              shape: RoundedRectangleBorder(
                                borderRadius: BorderRadius.circular(25),
                              ),
                              padding: const EdgeInsets.symmetric(vertical: 12),
                            ),
                            child: Text(
                              isExcellent && levelNumber < 15
                                  ? 'Next Level'
                                  : 'Retry',
                              style: const TextStyle(fontWeight: FontWeight.w800),
                            ),
                          ),
                        ),
                      ],
                    ),
                  ],
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}


// Islamic geometric pattern painter for background
class IslamicPatternPainter extends CustomPainter {
  @override
  void paint(Canvas canvas, Size size) {
    final paint = Paint()
      ..color = kQuizAccent.withOpacity(0.08)
      ..strokeWidth = 0.8
      ..style = PaintingStyle.stroke;

    const patternSize = 80.0;
    for (double x = 0; x < size.width; x += patternSize) {
      for (double y = 0; y < size.height; y += patternSize) {
        _drawStarPattern(canvas, paint, Offset(x, y), patternSize / 2.2);
      }
    }
  }

  void _drawStarPattern(Canvas canvas, Paint paint, Offset center, double radius) {
    final path = Path();
    const points = 8;
    final angleStep = (pi * 2) / points;

    for (int i = 0; i < points; i++) {
      final angle = i * angleStep;
      final x = center.dx + radius * cos(angle);
      final y = center.dy + radius * sin(angle);
      
      if (i == 0) {
        path.moveTo(x, y);
      } else {
        path.lineTo(x, y);
      }
    }
    path.close();
    canvas.drawPath(path, paint);
  }

  @override
  bool shouldRepaint(covariant CustomPainter oldDelegate) => false;
}

class SparklePainter extends CustomPainter {
  final List<Offset> sparkles = List.generate(
    100,
    (index) => Offset(Random().nextDouble(), Random().nextDouble()),
  );

  @override
  void paint(Canvas canvas, Size size) {
    final paint = Paint()..color = Colors.white;
    final random = Random(42); // Stable seed

    for (int i = 0; i < 60; i++) {
      final dx = random.nextDouble() * size.width;
      final dy = random.nextDouble() * size.height;
      final radius = random.nextDouble() * 1.5 + 0.5;
      final opacity = random.nextDouble() * 0.4 + 0.1;
      
      paint.color = Colors.white.withValues(alpha: opacity);
      canvas.drawCircle(Offset(dx, dy), radius, paint);

      // Add a cross effect for larger "stars"
      if (random.nextDouble() > 0.8) {
        final crossPaint = Paint()
          ..color = Colors.white.withValues(alpha: opacity * 0.5)
          ..strokeWidth = 0.5;
        final length = radius * 3;
        canvas.drawLine(Offset(dx - length, dy), Offset(dx + length, dy), crossPaint);
        canvas.drawLine(Offset(dx, dy - length), Offset(dx, dy + length), crossPaint);
      }
    }
  }

  @override
  bool shouldRepaint(covariant CustomPainter oldDelegate) => false;
}

// Circular progress painter for Quaban-style progress indicator
class CircularProgressPainter extends CustomPainter {
  final double progress;
  final Color backgroundColor;
  final Color progressColor;

  CircularProgressPainter({
    required this.progress,
    required this.backgroundColor,
    required this.progressColor,
  });

  @override
  void paint(Canvas canvas, Size size) {
    final center = Offset(size.width / 2, size.height / 2);
    final radius = size.width / 2;

    // Background circle
    final backgroundPaint = Paint()
      ..color = backgroundColor
      ..style = PaintingStyle.stroke
      ..strokeWidth = 8;

    canvas.drawCircle(center, radius - 4, backgroundPaint);

    // Progress arc
    final progressPaint = Paint()
      ..shader = SweepGradient(
        colors: [
          progressColor,
          progressColor.withOpacity(0.6),
          progressColor,
        ],
        startAngle: 0,
        endAngle: 3.14159 * 2,
      ).createShader(Rect.fromCircle(center: center, radius: radius))
      ..style = PaintingStyle.stroke
      ..strokeWidth = 8
      ..strokeCap = StrokeCap.round;

    const startAngle = -3.14159 / 2; // Start from top
    final sweepAngle = 2 * 3.14159 * progress;

    canvas.drawArc(
      Rect.fromCircle(center: center, radius: radius - 4),
      startAngle,
      sweepAngle,
      false,
      progressPaint,
    );

    // Glow effect
    if (progress > 0) {
      final glowPaint = Paint()
        ..color = progressColor.withOpacity(0.3)
        ..style = PaintingStyle.stroke
        ..strokeWidth = 12
        ..maskFilter = const MaskFilter.blur(BlurStyle.normal, 8);

      canvas.drawArc(
        Rect.fromCircle(center: center, radius: radius - 4),
        startAngle,
        sweepAngle,
        false,
        glowPaint,
      );
    }
  }

  @override
  bool shouldRepaint(CircularProgressPainter oldDelegate) {
    return oldDelegate.progress != progress;
  }
}


